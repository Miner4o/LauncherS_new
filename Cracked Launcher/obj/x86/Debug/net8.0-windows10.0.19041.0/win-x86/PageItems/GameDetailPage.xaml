<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Cracked_Launcher.GameDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Cracked_Launcher"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.microsoft.com/markup-compatibility/2006"
    Background="Transparent">

    <Grid Background="Transparent" Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image x:ConnectionId='3' x:Name="GameImage" Height="300" Stretch="Uniform"/>
            <TextBlock x:ConnectionId='4' x:Name="GameTitle" FontSize="24" FontWeight="Bold" Margin="0,20,0,0"/>
            <TextBlock x:ConnectionId='5' x:Name="GameRating" FontSize="20" Margin="0,10,0,0"/>
            <TextBlock x:ConnectionId='6' x:Name="GameStatus" FontSize="20" Margin="0,10,0,0"/>
        </StackPanel>

        <Button x:ConnectionId='2' Content="Go Back" HorizontalAlignment="Left" VerticalAlignment="Bottom"                      />
    </Grid>
</Page>

